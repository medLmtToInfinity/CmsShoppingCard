@model Page

@{ViewData["Title"] = "Details";}

<h1>Details Page</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Slug
        </dt>
        <dd class="col-sm-10">
            @Model.Slug
        </dd>
        <dt class="col-sm-2">
            Content
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Content)
        </dd>
        <dt class="col-sm-2">
            Sorting
        </dt>
        <dd class="col-sm-10">
            @Model.Sorting
        </dd>
    </dl>
</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> | 
    <a asp-action="Index">Go Back Home</a>
</div>
